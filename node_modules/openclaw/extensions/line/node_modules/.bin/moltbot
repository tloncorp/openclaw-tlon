#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/steipete/Projects/clawdbot/packages/moltbot/bin/node_modules:/Users/steipete/Projects/clawdbot/packages/moltbot/node_modules:/Users/steipete/Projects/clawdbot/packages/node_modules:/Users/steipete/Projects/clawdbot/node_modules:/Users/steipete/Projects/node_modules:/Users/steipete/node_modules:/Users/node_modules:/node_modules:/Users/steipete/Projects/clawdbot/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/steipete/Projects/clawdbot/packages/moltbot/bin/node_modules:/Users/steipete/Projects/clawdbot/packages/moltbot/node_modules:/Users/steipete/Projects/clawdbot/packages/node_modules:/Users/steipete/Projects/clawdbot/node_modules:/Users/steipete/Projects/node_modules:/Users/steipete/node_modules:/Users/node_modules:/node_modules:/Users/steipete/Projects/clawdbot/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../moltbot/bin/moltbot.js" "$@"
else
  exec node  "$basedir/../moltbot/bin/moltbot.js" "$@"
fi
